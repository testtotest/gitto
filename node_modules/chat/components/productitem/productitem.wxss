.product-item {
  width: 100%;
  min-height: 298rpx;
  height: auto;
  background: #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 20rpx;
  /* // flex-wrap: wrap; */
}

.product-item-img {
  width: 218rpx;
  height: 218rpx;
  margin-right: 10rpx;
}

.product-item-right {}

.product-item-title {
  padding-top: 30rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 20rpx;
}

.product-item-tag-c {
  font-size: 26rpx;
  line-height: 26rpx;
  font-weight: 400;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.product-item-money {
  font-size: 30rpx;
  font-weight: 500;
  color: #FF0000;
}

.nodata {
  padding-top: 200rpx;
  text-align: center;
}

.nodata image {
  width: 430rpx;
  height: 268rpx;
}

.nodata .nodata-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #9A9A9A;
}