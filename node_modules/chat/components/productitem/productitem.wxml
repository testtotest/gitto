<!--components/productitem.wxml-->
<block wx:for="{{productData}}" wx:key="index" wx:if="{{productData.length >0 }}">
	<view bindtap='handleProduct'  class="product-item" data-id="{{item.typeId}}">
	<!-- {{item.id}} -->
		<view>
			<image class="product-item-img" src="{{imgBaseUrl+item.imgurl}}"></image>
		</view>
		<view class="product-item-right">
			<view class="product-item-title">{{item.title}}</view>
			<view class="product-item-tag-c">
				{{item.description}}
			</view>
			<view class="product-item-money">
				¥{{item.money}}
			</view>
		</view>
	</view>
</block>
<view class="nodata" wx:if="{{productData.length == 0 && type !== 'search'}}">
	<image src="/images/nochanpin@2x.png"></image>
	<view class="nodata-text">还没有产品</view>
</view>
<view class="nodata" wx:if="{{productData.length == 0 && type == 'search'}}">
	<image src="/images/sousuo_nodata@2x.png" style="width:430rpx;height:232rpx"></image>
	<view class="nodata-text">抱歉,没有找到</view>
</view>

