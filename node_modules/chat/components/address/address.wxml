<!--components/address/address.wxml-->
<scroll-view class="address-list" scroll-y="true" style="height:700rpx;">
    <block wx:for="{{addresslist}}" wx:key="index">
        <view class="address-item" bindtap="handleAddress" data-address="{{item}}">
            <radio checked="{{defaultAddress.id == item.id}}" />
            {{item.provinceVo.name + item.cityVo.name + item.countyVo.name + item.detailed}}
        </view>
    </block>
</scroll-view>
<view class="btn btn-block" bindtap="addAddress">
        其他地址
</view>