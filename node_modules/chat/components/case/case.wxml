<!--components/case/case.wxml-->
<block wx:for="{{caseData}}" wx:key="index">
	<view bindtap='handleProduct' class="product-item" data-id="{{item.id}}">
		<view class="img">
			<image class="product-item-img" src="{{imgBaseUrl+item.image}}"></image>
		</view>
		<view class="product-item-right">
			<view class="product-item-title">{{item.title}}</view>
			<view class="product-item-tag-c">
				{{item.descs}}
			</view>
			<view class="product-time">
				{{item.releaseTime}}
			</view>
		</view>
	</view>
</block>