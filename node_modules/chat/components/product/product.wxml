<block wx:for="{{productData}}" wx:key="index">
	<view bindtap='handleProduct'  class="product-item" data-id="{{item.id}}">
	<!-- {{item.id}} -->
		<view>
			<image class="product-item-img" src="{{imgBaseUrl+item.photo1}}"></image>
		</view>
		<view class="product-item-right">
			<view class="product-item-title">{{item.name}}</view>
			<view class="product-item-tag-c">
				<block wx:for="{{item.characteristicArr}}" wx:key="index">
					<view class="item-tag">
						{{item}}
					</view>
				</block>
			</view>
		</view>
	</view>
</block>
