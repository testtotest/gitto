.product-item{
  width: 100%;
  min-height: 298rpx;
  height: auto;
  background: #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
  padding:30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 20rpx;
 /* // flex-wrap: wrap; */
}
.product-item-img{
  width: 218rpx;
  height: 218rpx;
  margin-right: 30rpx;
}
.product-item-right{

}
.product-item-title{
  padding-top: 30rpx;
  line-height: 32rpx;
  font-size:32rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.product-item-tag-c{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  flex-wrap: wrap;
  font-size:26rpx;
  line-height: 26rpx;
  font-weight:400;
  color:rgba(128,207,175,1);
  margin-top:28rpx;
}
.item-tag{
  margin-bottom: 23rpx;
  margin-right: 21rpx;
}
