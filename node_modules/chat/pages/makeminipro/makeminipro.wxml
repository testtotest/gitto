<!--pages/makeminipro/makeminipro.wxml-->
<view class="bg">
    <view class="form-c">
        <input class="form-item" model:value="{{username}}" type="text" placeholder="姓名" />
    </view>
    <view class="form-c">
        <input class="form-item" model:value="{{phone}}" type="number" placeholder="手机号" />
    </view>
    <view class="form-c">
        <input class="form-item" model:value="{{code}}" type="number" placeholder="验证码" />
        <view plain="true" catchtap="getCode" class="getcode" wx:if="{{!isSend}}">获取验证码</view>
        <text class="countdown" wx:else>{{timeView}}s</text>
    </view>
    <view class="form-c">
        <view class="tijiao" bindtap="onFormSubmit"> 提交</view>
    </view>
</view>

<view class="model-public-c" wx:if="{{show}}">
				<view class="model-public">
								<view class="model-title">提示</view>
								<view class="model-desc">成功</view>
								<view bindtap="goUrl" class="model-btn">我知道了</view>
				</view>
</view>
