<!--pages/userinfoedit/userinfoedit.wxml-->
<view class="form-c">
	<view bindtap="handleEdit" data-sign="name" data-val="{{userInfo.name}}" class="flex-between form-item">
		<view class="item-form-title">
			昵称
		</view>
		<view class="item-form-input">
			<input type="text" model:value="{{username}}" placeholder="请填写" />
		</view>
	</view>

	<view bindtap="handleEdit" data-sign="phone" class="flex-between form-item">
		<view class="item-form-title">
			手机号码
		</view>
		<view class="item-form-input">
			<input type="number" model:value="{{phone}}" placeholder="请填写" />
		</view>
	</view>
</view>
<view class="btn btn-block save" bindtap="onSaveTap">
	保存
</view>
<view class="model-public-c" wx:if="{{show}}">
				<view class="model-public">
								<view class="model-title">提示</view>
								<view class="model-desc">成功</view>
								<view bindtap="goUrl" class="model-btn">我知道了</view>
				</view>
</view>