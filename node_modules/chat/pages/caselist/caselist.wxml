<scroll-view  style="height:{{scrollHeight}}px;" class="case-container" scroll-y="true" scroll-x="false"
 bindscroll="scroll" 
 bindscrolltolower="onScrollLower" 
 bindrefresherrefresh="refresh"
 refresher-enabled="{{true}}"
  refresher-threshold="{{50}}"
  refresher-background="dark"
  refresher-triggered="{{triggered}}">
    <item-case caseData="{{caseData}}" />
</scroll-view>
<mp-loading type="circle" show="{{show}}"></mp-loading>
