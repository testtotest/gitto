/* pages/orderlist/orderlist.wxss */
.container {
    padding: 20rpx 30rpx 50rpx;
}

.order-list {}

.order-container {
    background: #fff;
    padding: 40rpx 30rpx;
    margin-bottom: 20rpx;
    border-radius: 12rpx;
}

.cart-item-img image {
    width: 218rpx;
    height: 218rpx;
}

.cart-item-desc {
    width: 400rpx;
}

.cart-item-desc .title {
    font-size: 32rpx;
    color: #343434;
    margin-bottom: 20rpx;
}

.cart-item-desc .title .icon image {
    width: 36rpx;
    height: 36rpx;
    margin-top: -3rpx;
}

.cart-item-desc .desc {
    width: 310rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #9A9A9A;
    line-height: 39rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.cart-item-desc .money {
    display: flex;
}

.cart-item-desc .money .price {
    font-size: 30rpx;
    font-weight: 400;
    color: #343434;
}

.cart-item-desc .money .price .count {
    font-size: 24rpx;
    font-weight: 400;
    color: #9A9A9A;
}

.order-desc{
    margin-top: 20rpx;
    text-align: right;
}
.order-desc .count{
    color: #9A9A9A;
    font-size: 26rpx;
}
.order-desc .money{
    color: #343434;
    font-size: 28rpx;
}