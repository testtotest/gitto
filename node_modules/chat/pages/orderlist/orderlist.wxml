<!--pages/orderlist/orderlist.wxml-->
<view class="container">
    <view class="order-list">
        <block wx:for="{{orderList}}" wx:key="index" wx:for-item="item" wx:if="{{!nodata}}">
            <view class="order-container" data-orderId="{{item.orderId}}" bindtap="onOrderTap">
                <block wx:for="{{item.list}}" wx:key="index" wx:for-item="order">
                    <view class="cart-item flex-between">
                        <view class="cart-item-img">
                            <image src="{{imgBaseUrl + order.imgUrl}}"></image>
                        </view>
                        <view class="cart-item-desc">
                            <view class="title flex-between">
                                <text>{{order.title}}</text>
                                <text style="color:#39CF92;font-size:28rpx;float:right">{{status[item.status]}}</text>
                            </view>
                            <view class="desc">
                                {{order.represent}}
                            </view>
                            <view class="money flex-between">
                                <view class="price">
                                    ¥{{(order.unitPrice / 100) }}
                                    <text class="count">x {{order.number}}</text>
                                </view>
                            </view>
                        </view>
                    </view>
                </block>
                <view class="order-desc">
                    <text class="count"> 共{{item.totleNumber}}件商品 </text>
                    <text class="money">合计 ¥ {{item.totleMoney / 100}}元</text>
                </view>
            </view>
        </block>
        <view class="nodata" wx:if="{{nodata}}">
            <image src="/images/order_nodata@2x.png"></image>
            <view class="nodata-text">还没有订单</view>
        </view>
    </view>
</view>