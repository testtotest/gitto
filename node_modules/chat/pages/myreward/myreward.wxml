<view class="reward-info">
	<image class="reward-info-bg" src="{{img+'xcx_2.png'}}"></image>
	<view class="account">
		<view class="account-font">奖励余额(元)</view>
		<view class="account-num">{{balance}}</view>
		<view class="account-bottom">
			<view>
				<view class="account-font">累计奖励(元)</view>
				<view class="account-num2">{{amount}}</view>
			</view>
			<view class="account-bottom-right">
				<view class="account-font">已领取(元)</view>
				<view class="account-num2">{{amount-balance}}</view>
			</view>
		</view>
	</view>
</view>


