<view class="unlogin-c">
	<button wx:if="{{userIcon ==''}}" class="flex-between login-c" open-type="getUserInfo"
		bindgetuserinfo="bindGetUserInfo">
		<view class="flex-between">
			<view class="user-icon">
				<image src="/images/moren@2x.png"></image>
			</view>
			<view class="user-name">请登陆</view>
		</view>
		<view class="flex-between more-btn">
			查看
			<image src="/images/gengduo@2x.png" />
		</view> 
	</button>
</view> 
<view class="flex-between login-c" wx:if="{{userIcon !=''}}">
	<view class="flex-between">
		<view class="user-icon">
			<image src="{{userIcon}}"></image>
		</view>
		<view class="user-name">{{userName}}</view>
	</view>
	<view class="flex-between more-btn" bindtap="goAccount">
		查看
		<image src="/images/gengduo@2x.png" />
	</view>
</view>

<view class="flex-between moneydet">
	<view bindtap="handleEdit"  data-sign="balance" class="moneydet-item">
		<view class="count" auto-focus placeholder="0" >{{balance ? balance : '0.00'}}</view>
		<view class="title">奖励余额</view>
	</view>

	<view bindtap="handleEdit"  data-sign="amount" class="moneydet-item">
		<view class="count" auto-focus placeholder="0" >{{amount ? amount : '0.00'}}</view>
		<view class="title">累计奖励</view>
	</view>

  	<view bindtap="handleEdit"  data-sign="withdrawalMoney" class="moneydet-item">
	  <view class="count" auto-focus placeholder="0" >{{withdrawalMoney ? withdrawalMoney :'0.00'}}</view>
		<view class="title">已领取</view>
	</view>
</view>

