<!--pages/search/search.wxml-->
<view>
    <view class="search">
        <icon class="icon icon-small" type="search" size="24" color="#999999"></icon>
        <input type="text" confirm-type="search" placeholder="搜索"  model:value="{{value}}"  bindconfirm="onSearchChange" />
    </view>

    <view class="order flex-between">
        <view class="order-tab {{orderNum == '3'? 'active': ''}}" data-orderNum="3" bindtap="onTabTap">
            销量排序
        </view>
        <view class="order-tab {{orderNum == '1'? 'active': ''}}" data-orderNum="1" bindtap="onTabTap">
            价格高到低
        </view>
        <view class="order-tab {{orderNum == '2'? 'active': ''}}" data-orderNum="2" bindtap="onTabTap">
            价格低到高
        </view>
        <view class="order-tab {{orderNum == '4'? 'active': ''}}" data-orderNum="4" bindtap="onTabTap">
            最新上架
        </view>
    </view>

    <view class="product-list">
        <scroll-view scroll-y="true" show-scrollbar="false" class="product-list-right scroll">
            <item-product binddetailProdut="detailProduct" productData="{{productlist}}" type="search"></item-product>
        </scroll-view>
    </view>
</view>
