/* pages/search/search.wxss */
page{
    background: #fff;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.search {
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    position: fixed;
    top: 0;
}

.search .icon {
    position: absolute;
    left: 60rpx;
    top: 36rpx;
}

.search input {
    text-align: left;
    padding-left: 86rpx;
    width: 690rpx;
    height: 80rpx;
    border: 1rpx solid #C4C4C4;
    border-radius: 40rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.order {
    width: 690rpx;
    height: 100rpx;
    position: fixed;
    top: 120rpx;
    padding: 0 30rpx;
}

.order-tab {
    width: 160rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 24rpx;
    background: #F2F3F5;
    border-radius: 30rpx;
    color: #343434;
}

.order-tab.active{
    background: #38CF91;
    color: #fff;
}

.product-list {
    margin-top: 140rpx;
    background-color: #fff;
}

.scroll {
    background-color: #fff;
    position: fixed;
    top: 280rpx;
    bottom: 0
}