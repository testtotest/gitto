/* pages/productlist/product.wxss */
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
  }
.search {
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    position: fixed;
    top:0;
}
.search .icon{
    position: absolute;
    left: 60rpx;
    top: 36rpx;
}
.search input {
    text-align: left;
    padding-left: 86rpx;
    width: 690rpx;
    height: 80rpx;
    background: #F2F3F5;
    border-radius: 40rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}
.product-list{
    margin-top: 140rpx;
    background-color: #fff;
}
.product-list-left{
    width: 144rpx;
    background: #F5F7F9;
    /* background: red; */
    position: fixed;
    top: 140rpx;
    bottom: 0;
    z-index: 100;
}
.product-nav{
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 28rpx;
}
.product-nav.active{
    background-color: #fff;
    color: #37CF91;
    font-size: 30rpx;
}
.product-list-right{
    padding-left: 144rpx;
    width: 606rpx;
}

.scroll{
    background-color: #fff;
    position: fixed;
    top: 140rpx;
    bottom: 0
}
