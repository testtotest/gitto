<!--pages/productlist/product.wxml-->
<view>
    <view class="search">
        <icon class="icon icon-small" type="search" size="24" color="#999999"></icon>
        <input type="text" confirm-type="search" placeholder="搜索" bindconfirm="onSearchChange"/>
    </view>

    <view class="product-list">
        <scroll-view scroll-y="true" show-scrollbar="false" enhanced="true" class="product-list-left">
                <view class="{{!category?'active':''}} product-nav" data-category="" bindtap="getProductlist">
                    全部
                </view>
            <block wx:for="{{categoryInfo}}" wx:key="index">
                <view class="product-nav {{category === index + 1?'active':''}}" data-category="{{item.categoryId}}" bindtap="getProductlist">
                    {{item.category}}
                </view>
            </block>
        </scroll-view>
        <scroll-view scroll-y="true" show-scrollbar="false" class="product-list-right scroll">
            <item-product binddetailProdut="detailProduct" productData="{{productlist}}"></item-product>
        </scroll-view>
    </view>
</view>