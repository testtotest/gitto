<view class="ok-btn" bindtap="handleInvite">完成</view>

<view class="model-public-c" wx:if="{{showBuyModel}}">
				<view class='buy-c animated wx:if="{{showBuyModel ?"fadeInUpBig":""}}"'>
								<image bindtap="closedModel" class="closed-btn" src="../../images/close.png" />
								<view class="buy-top-c">

												<image class="img" src="{{selectedImg}}"></image>
												<view>
																<view class="price">
																				<text class="price-font">¥</text>
																				{{selectedPrice}}
																</view>
																<view class="selected-type">已选：“{{selectedName}}”</view>
																<view class="selected-area">面积：{{selectedArea}}</view>
												</view>
								</view>
								<scroll-view class="scroll-c" scroll-y="{{true}}">
												<view class="pubic-item-title">产品类型</view>
												<view class="public-item-content">
																<block wx:for="{{list}}" wx:key="index">
																				<view bindtap="handleSelected" data-id="{{item.id}}" class="public-item-content-item wx:if={{active==index ? 'item-active' :''}}">
																								{{item.name}}
																				</view>
																</block>
												</view>
												<view class="pubic-item-title">功率</view>
												<view class="public-item-content">
																<block wx:for="{{subList}}" wx:key="index">
																				<view data-id="{{index}}" bindtap="handleSubSelected" class="public-item-content-item wx:if={{activeSub ==index ? 'item-active' :''}}">
																								{{item.power}}
																				</view>
																</block>
												</view>
								</scroll-view>
								<view bindtap="closedModel" class="buy-btn">确定</view>
				</view>
</view>


