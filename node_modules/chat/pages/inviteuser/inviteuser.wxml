<v-title title="{{title}}"/>


<view class="model-public-c" wx:if="{{applyed}}">
	<view class="model-public">
			<view class="model-title">
				提交成功
			</view>
			<view class="model-desc">
				工作人员将在三个工作日内处理
			</view>
			<view bindtap="goUrl" class="model-btn">我知道了</view>
	</view>
</view>

<view class="form-c">
	<view class="flex-between form-item">
		<view class="item-form-title">
			姓名
		</view>
		<view>
			<input  bindinput="getUserName"  model:value="{{userName}}" auto-focus placeholder="请填写" />
		</view>
	</view>
	<view class="flex-between form-item">
		<view class="item-form-title">
			手机号码
		</view>
		<view>
			<input  bindinput="getUserPhone"  model:value="{{userPhone}}" placeholder="请填写" />
		</view>
	</view>
	<view class="flex-between form-item">
		<view class="item-form-title">
			地址信息(非必填)
		</view>
		<view>
			<textarea bindinput="handleAddress" model:value="{{address}}" auto-height="{{true}}"  placeholder="请填写" ></textarea>
		</view>
	</view>
	<view class="flex-between form-item">

		<view class="item-form-title">产品类型(非必填)</view>
		<view bindtap="selectProduct">{{selectedName}}</view>
