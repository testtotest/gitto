<view class="title">
				<v-title title="{{title1}}" />
</view>
<view class="product">
				<item-product id="{{id}}" productData="{{currentProduct}}"></item-product>
</view>
<view class="tip">意向产品提交后，可联系销售更改</view>
<view class="title" style="padding-top:20rpx">
				<v-title title="{{title2}}" />
</view>
<view class="form-c">
				<view class="flex-between form-item">
								<view class="item-form-title" bindinput="getUserName">姓名</view>
								<view>
												<input bindinput="getUserName" model:value="{{userName}}" auto-focus placeholder="请填写" />
								</view>
				</view>
				<view class="flex-between form-item">
								<view class="item-form-title">手机号码</view>
								<view>
												<input bindinput="getUserPhone" model:value="{{userPhone}}" placeholder="请填写" />
								</view>
				</view>
				<view class="flex-between form-item">
								<view class="item-form-title">地址信息</view>
								<view>
												
												<input wx:if="{{isAutoAddress==1}}" placeholder="请填写" bindtap="getLocation" disabled="{{true}}"></input>
											  <input style="width:560rpx;" wx:if="{{isAutoAddress==2 || isAutoAddress==3}}" bindinput="handleAddress" model:value="{{address}}" placeholder="请填写"></input>
												<!--
												<textarea style="z-index:0" wx:if="{{isAutoAddress==2 || GetAddressAgain==2}}" bindinput="handleAddress" model:value="{{address}}" auto-height="{{true}}" placeholder="请填写"></textarea>
												-->
												
												<view class=".textarea" wx:if="{{apped}}">{{address}}</view>
								</view>
				</view>
				<view class="flex-between form-item">
								<view class="item-form-title">产品类型</view>
								<view bindtap="selectProduct">{{selectedName}}</view>
								<!-- <view class="xxxx"> -->
								<!-- <picker bindchange="bindPickerChange" value="{{characteristicArr[index].id}}" range-key="{{'name'}}" range="{{characteristicArr}}">
				<view class="picker">
			<text style="visibility: hidden;">当前选择： </text>	{{characteristicArr[index].name}}
				</view>
			</picker> -->
								<!-- </view> -->
								<!-- <view class="item-form-title">
			产品类型(非必填)
		</view>
		<view>
			<input class="weui-input" auto-focus placeholder="请填写" />
		</view> -->
				</view>
				<view class="flex-between form-item" wx-if="{{!invCoded}}">
								<view class="item-form-title">邀请码(非必填)</view>
								<view>
												<input bindinput="handleInvCode" model:value="{{invCode}}" placeholder="请填写" />
								</view>
				</view>
</view>
<view class="ok-btn" bindtap="handleForm">提交安装意向</view>
<view class="model-public-c" wx:if="{{applyed}}">
				<view class="model-public" wx:if="{{applyed}}">
								<view class="model-title">提交成功</view>
								<view class="model-desc">工作人员将在三个工作日内处理</view>
								<view bindtap="goUrl" class="model-btn">我知道了</view>
				</view>
</view>


<view class="model-public-c" wx:if="{{code6}}">
				<view class="model-public">
								<view class="model-title">邀请码错误</view>
								<view class="model-desc"> 请核对邀请码</view>
								<view bindtap="goUrl2" class="model-btn">我知道了</view>
				</view>
</view>


<view class="model-public-c" wx:if="{{showBuyModel}}">
				<view class='buy-c animated wx:if="{{showBuyModel ?"fadeInUpBig":""}}"'>
								<image bindtap="closedModel" class="closed-btn" src="../../images/close.png" />
								<view class="buy-top-c">

												<image class="img" src="{{selectedImg}}"></image>
												<view>
																<view class="price">
																				<text class="price-font">¥</text>
																				{{selectedPrice}}
																</view>
																<view class="selected-type">已选：“{{selectedName}}”</view>
																<view class="selected-area">面积：{{selectedArea}}</view>
												</view>
								</view>
								<scroll-view class="scroll-c" scroll-y="{{true}}">
												<view class="pubic-item-title">产品类型</view>
												<view class="public-item-content">
																<block wx:for="{{list}}" wx:key="index">
																				<view bindtap="handleSelected" data-id="{{item.id}}" class="public-item-content-item wx:if={{active==index ? 'item-active' :''}}">
																								{{item.name}}
																				</view>
																</block>
												</view>
												<view class="pubic-item-title">功率</view>
												<view class="public-item-content">
																<block wx:for="{{subList}}" wx:key="index">
																				<view data-id="{{index}}" bindtap="handleSubSelected" class="public-item-content-item wx:if={{activeSub ==index ? 'item-active' :''}}">
																								{{item.power}}
																				</view>
																</block>
												</view>
								</scroll-view>
								<view bindtap="closedModel" class="buy-btn">确定</view>
				</view>
</view>
