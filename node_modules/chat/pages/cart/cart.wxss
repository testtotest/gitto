/* pages/cart/cart.wxss */
.container {
    padding-bottom: 150rpx;
}

.address {
    height: 80rpx;
    background: #fff;
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    color: #343434;
    font-size: 26rpx;
}

.address image {
    width: 26rpx;
    height: 32rpx;
    margin-right: 20rpx;
}

.no-address {
    display: flex;
    align-items: center;
    height: 80rpx;
    font-size: 26rpx;
    color: #333;
    background: #fff;
    padding: 0 30rpx;
}

.no-address image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.cart-list {
    margin-top: 20rpx;
}

.cart-item {
    background: #fff;
    padding: 40rpx 30rpx;
    margin-bottom: 20rpx;
}

.cart-item-img image {
    width: 218rpx;
    height: 218rpx;
}

.cart-item-desc {
    width: 400rpx;
}

.cart-item-desc .title {
    font-size: 32rpx;
    color: #343434;
    margin-bottom: 20rpx;
}

.cart-item-desc .title .icon image {
    width: 36rpx;
    height: 36rpx;
    margin-top: -3rpx;
}

.cart-item-desc .desc {
    width: 310rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #9A9A9A;
    line-height: 39rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.cart-item-desc .parts {
    display: inline-block;
    padding: 10rpx;
    background: #F6F7F9;
    border-radius: 20rpx;
    font-size: 26rpx;
    color: #666666;
    margin-bottom: 25rpx;
}

.parts image {
    width: 20rpx;
    height: 18rpx;
    vertical-align: middle;
}

.cart-item-desc .money {
    display: flex;
}

.cart-item-desc .money .price {
    font-size: 30rpx;
    font-weight: 500;
    color: #FF0101;
}

.cart-item-desc .money .count image {
    width: 30rpx;
    height: 30rpx;
}

.cart-item-desc .money .count text {
    width: 60rpx;
    height: 28rpx;
    line-height: 28rpx;
    background: #F6F7F9;
    display: inline-block;
    font-size: 24rpx;
    font-weight: 400;
    color: #343434;
    text-align: center;
    margin: 0 20rpx;
}

.fixed-bottom-btns {
    background: #fff;
    /* box-shadow: 0 -1rpx 1rpx 1rpx #ddd; */
    box-shadow: 0px -8rpx 10rpx 1px rgba(237, 238, 240, 0.5);
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 98rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.check-all {
    font-size: 28rpx;
    color: #343434;
    display: flex;
    align-items: center;
}

.check-all radio {
    margin-right: 20rpx;
}

.total-price {
    font-size: 28rpx;
    width: 340rpx;
    text-align: right;
}

.total-price text {
    color: red;
}

.buy {
    width: 160rpx;
    height: 66rpx;
    background: #FF7301;
    border-radius: 33rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 66rpx;
    text-align: center;
}

.address-c {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 880rpx;
    padding-bottom: 20rpx;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    background: #FFFFFF;
    animation-duration: 0.5s
}

.address-c .address-title{
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 500;
    color: #343434;
}

.closed-btn {
    width: 26rpx;
    height: 26rpx;
}

.product-item {
    border-radius: 12rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 60rpx 30rpx 10rpx;
}

.product-item-img {
    width: 164rpx;
    height: 164rpx;
    margin-right: 30rpx;
}

.product-item-right {
    height: 164rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.product-item-price {
    font-size: 36rpx;
    font-weight: 500;
    color: #FF0000;
    margin-top: 20rpx;
}

.product-item-price text {
    font-size: 24rpx;
}

.product-item-title {
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
}

.product-item-area {
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
}

.parts {
    padding: 40rpx 30rpx 1rpx;
    background: #fff;
}

.parts-item {
    margin-bottom: 30rpx;
}

.parts-title {
    margin-bottom: 15rpx;
    font-size: 30rpx;
    font-weight: 500;
    color: #333333;
}

.parts-option {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.parts-option-item {
    height: 66rpx;
    line-height: 66rpx;
    padding: 0 30rpx;
    text-align: center;
    font-size: 26rpx;
    font-weight: 400;
    color: #333333;
    background: #F2F3F5;
    border-radius: 8rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid transparent
}

.parts-option-item.selected {
    background: #E0FFF2;
    border: 1rpx solid #38CF91;
    color: #38CF91;
}

.parts-option-item.stock {
    background: #F2F3F5;
    color: #CCCCCC;
}

.parts-option-item.big {
    padding: 0 30rpx;
}

.btn-block{
    position: fixed;
    bottom: 0;
    width: 100%;
    border-radius: 0;
    background-color: #38D092;
}

.covers {
           width: 100%;
           height: 100%;
           position: fixed;
           top: 0;
           left: 0;
           display: flex;
           justify-content: center;
           align-items: center;
           z-index: 6;
}
.covers-a{
		width: 600rpx;
		height: 400rpx;
		background: rgba(255, 255, 255, 1);
		border-radius: 20rpx;
		display: flex;
		flex-direction: column;
		z-index: 5;
}
.covers-a-title{
	width:100%;
	display: flex;			  
	align-items: center;			  
	justify-content: center;					 
	margin-top: 82rpx;			
	height: 32rpx;
	font-size: 15px;			
	color: #333333;
	line-height: 36rpx;
	margin-bottom: 62rpx;
			 /* font-weight: bold;  white-space: nowrap;	*/
}
.bg 
{
           position: fixed;
           top: 0;
           left: 0;
           width: 100%;
           height: 100%;
           background: rgba(0, 0, 0, 0.5);
}
