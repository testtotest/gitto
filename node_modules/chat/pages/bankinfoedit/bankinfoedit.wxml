<!--pages/bankinfoedit/bankinfoedit.wxml-->
<view class="form-c">
	<view bindtap="handleEdit" class="flex-between form-item">
		<view class="item-form-title">
			姓名
		</view>
		<view class="item-form-input">
			<input type="text" model:value="{{userName}}" placeholder="请填写" />
		</view>
	</view>

	<view bindtap="handleEdit" class="flex-between form-item">
		<view class="item-form-title">
			手机号码
		</view>
		<view class="item-form-input">
			<input type="number" model:value="{{reservedPhone}}" placeholder="请填写" />
		</view>
	</view>
	<view bindtap="handleEdit" class="flex-between form-item">
		<view class="item-form-title">
			卡号
		</view>
		<view class="item-form-input">
			<input type="number" bindblur="getCardInfo" model:value="{{bankCardNo}}" placeholder="请填写" />
		</view>
	</view>
	<view bindtap="handleEdit" class="flex-between form-item">
		<view class="item-form-title">
			银行
		</view>
		<view class="item-form-input">
			<input type="number" model:value="{{bankName}}" placeholder="请填写" />
		</view>
	</view>
</view>
<view class="btn btn-block save" bindtap="onSaveTap">
	保存
</view>
