<!--pages/order/order.wxml-->
<view>
    <scroll-view style="height:calc(100vh - 100rpx)" scroll-y="true" scroll-x="false">
        <view class="latest-pay-time" wx:if="{{orderDetail.status=='2'}}">
            <image src="/images/shijian@2x.png"></image>
            <view class="time-text">
                <text class="title">最晚付款时间</text>
                <text class="time">{{orderDetail.latestPaymentTime}}</text>
            </view>
        </view>
        <view class="address">
            <view class="address-item flex-between">
                <view class="address-left">
                    <view class="name">
                        {{orderDetail.name}}:
                        <text>{{orderDetail.phone}}</text>
                    </view>
                    <view class="location">
                        {{orderDetail.address}}
                    </view>
                </view>
            </view>
            <image src="/images/fenge@2x.png" class="fengge"></image>
        </view>

        <block wx:for="{{orderDetail.list}}" wx:key="index">
            <view class="cart-item flex-between">
                <view class="cart-item-img">
                    <image src="{{imgBaseUrl + item.imgUrl}}"></image>
                </view>
                <view class="cart-item-desc">
                    <view class="title flex-between">
                        <text>{{item.title}}</text>
                    </view>
                    <view class="desc">
                        {{item.represent}}
                    </view>
                    <view class="money flex-between">
                        <view class="price">
                            ¥{{(item.unitPrice / 100) }}
                            <text class="count">x {{item.number}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </block>

        <view class="order-desc">
            <view class="desc-item flex-between">
                <text>订单编号：</text>
                <text>{{orderDetail.orderNumber}}</text>
            </view>
            <view class="desc-item flex-between">
                <text>下单时间：</text>
                <text>{{orderDetail.createTime}}</text>
            </view>
            <view class="desc-item flex-between">
                <text>商品件数：</text>
                <text>{{orderDetail.totleNum}}件</text>
            </view>
            <view class="desc-item flex-between">
                <text>商品总金额：</text>
                <text>¥{{orderDetail.totleMoney / 100}}</text>
            </view>
        </view>
        <view class="btns" wx:if="{{orderDetail.status=='2'}}">
            <view class="cancel" bindtap="onCancelTap">
                取消订单
            </view>
            <view class="pay" bindtap="onPayTap">
                付款
            </view>
        </view>
    </scroll-view>
    <button open-type="contact" bindcontact="handleContact" hover-class="none" session-from="{{serviceUrl}}"
        send-message-title="通云煤改电客服" wx:if="{{orderDetail.status=='4'}}">
        <view class="btn btn-block">
            联系微信客服
        </view>
    </button>
</view>