/* pages/order/order.wxss */
.latest-pay-time {
    height: 136rpx;
    background: #38D092;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
}

.latest-pay-time image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 15rpx;
    margin-top: -32rpx;
}

.time-text {
    color: #fff;
    display: flex;
    flex-direction: column;
}

.time-text .title {
    font-size: 30rpx;
}

.time-text .time {
    font-size: 26rpx;
}

.address {
    font-size: 0;
    margin-bottom: 20rpx;
}

.address-item {
    height: 136rpx;
    padding: 0 30rpx;
    background-color: #fff;
}

.address-item .name {
    font-size: 30rpx;
    font-weight: 400;
    color: #333333;
    line-height: 36rpx;
    margin-bottom: 5rpx;
}

.address-item .location {
    font-size: 24rpx;
    font-weight: 400;
    color: #333333;
    line-height: 36rpx;
    width: 574rpx;
}

.fengge {
    width: 100%;
    height: 6rpx;
}

.cart-item {
    background: #fff;
    padding: 40rpx 30rpx;
    margin-bottom: 20rpx;
}


.cart-item-img image {
    width: 218rpx;
    height: 218rpx;
}

.cart-item-desc {
    width: 400rpx;
}

.cart-item-desc .title {
    font-size: 32rpx;
    color: #343434;
    margin-bottom: 20rpx;
}

.cart-item-desc .title .icon image {
    width: 36rpx;
    height: 36rpx;
    margin-top: -3rpx;
}

.cart-item-desc .desc {
    width: 310rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #9A9A9A;
    line-height: 39rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.cart-item-desc .money {
    display: flex;
}

.cart-item-desc .money .price {
    font-size: 30rpx;
    font-weight: 400;
    color: #343434;
}

.cart-item-desc .money .price .count {
    font-size: 24rpx;
    font-weight: 400;
    color: #9A9A9A;
}

.order-desc {
    padding: 30rpx;
    background: #fff;
}

.order-desc .desc-item {
    margin-bottom: 25rpx;
}

.order-desc .desc-item text {
    color: #666;
    font-size: 22rpx;
}

.order-desc .desc-item:last-child text:first-child {
    color: #343434;
    font-size: 30rpx;
}

.order-desc .desc-item:last-child text:last-child {
    color: #FF0000;
    font-size: 30rpx;
}

.btns {
    padding: 0 31rpx;
    margin-top: 40rpx;
    display: flex;
    justify-content: flex-end;
}

.cancel,
.pay {
    width: 264rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: #FFFFFF;
    border-radius: 44rpx;
    font-size: 30rpx;
}
.cancel{
    color: #9A9A9A;
    border: 1rpx solid #9A9A9A;
    margin-right: 20rpx;
}
.pay{
    color: #38D092;
    border: 1rpx solid #38D092;
}
.btn {
    position: fixed;
    bottom: 0;
    width: 100% !important;
    display: block;
    border-radius: 0;
    background-color: #38D092;
    font-size: 32rpx;
    font-weight: 400 !important;
}