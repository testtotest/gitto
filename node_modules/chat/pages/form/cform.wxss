.address-c {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 880rpx;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    background: #FFFFFF;
    animation-duration: 0.5s
}
.closed-btn{
    width: 26rpx;
    height: 26rpx;
}
.address-c .address-title{
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 500;
    color: #343434;
}
.address-c .address-tab{
    padding-left: 30rpx;
    height: 85rpx;
    line-height: 85rpx;
    border-bottom: 1px solid #DEDEDE;
}
.address-tab text{
    display: inline-block;
    font-size: 32rpx;
    color: #343434;
    line-height: 85rpx;
    margin-right: 20rpx;
}
.address-tab text:last-child{
    color: #38D092;
    border-bottom: 1rpx solid #38D092;
}

.address-c .address-list{
    padding-top: 20rpx;
}

.address-c .address-list .address-item{
    height: 70rpx;
    line-height: 70rpx;
    padding-left: 30rpx;
    font-size: 30rpx;
    color: #343434;
}