<view class="myinvite-code-c" bindtap="copyInvCode">
	<image class="myinvite-code-bg" src="/images/yaoqing_bj@2x.png"></image>
	<view class="myinvite-code" >{{invCode}}</view>
</view>

<view bindtap="gobefore" class="flex-between go-detail">
	<view class="go-detail-left">
		活动说明
	</view>
	<view class="go-detail-right">
		查看 <image src="/images/gengduo_gonggao@2x.png"></image>
	</view>
</view>


<!-- <view class="title">
	<v-title title="{{title}}"></v-title>
</view> -->

<view class="un-reward">
	<view style="width:180rpx;" class="{{active?'active': ''}}" bindtap="handleReward">
		已申请办理
	</view>
	<view style="width:150rpx;" class="{{!active?'active': ''}}" bindtap="handleCash">
		邀请列表
	</view>
</view>

<view class="margin-bottom"></view>

<block wx:if="{{ishow==1}}">
	<view class="flex-between table-title">
		<view>申请时间</view>
		<view>申请人</view>
		<view>邀请关系</view>
		<view>预计奖励(元)</view>
		<view>安装进度</view>
	</view>
	<block wx:if="{{!inviteList.length}}">
		<view class="nodata-c">
			<image src="/images/icon@2x.png"></image>
			<text>暂无记录</text>
		</view>
	</block>
	<block wx:if="{{inviteList.length}}" wx:for="{{inviteList}}" wx:key="{{index}}">
		<view class="flex-between table-title {{index%2 ? '' : 'odd'}}">
			<view class="font-color2">{{item.createTime}}</view>
			<view class="font-color2">{{item.applicantName}}</view>
			<!-- <block wx:if="{{item.ship  ==1}}">
				<view class="font-color2">自己申请</view>
			</block> -->
			<!-- <block wx:elif="{{item.ship  ==2}}">
				<view class="font-color2">直接邀请</view>
			</block> -->
			<!-- <block wx:elif="{{item.ship  ==3}}">
				<view class="font-color">
					<view>已被他人</view>
					<view>邀请安装</view>
				</view>
			</block> -->
			<view class="font-color2">{{item.ship}}</view>
			<view class="font-color2">{{item.amount}}</view>
			<block wx:if="{{item.auditStatus  ==1}}">
				<view class="font-color">已申请</view>
			</block>
			<block wx:elif="{{item.auditStatus  ==2}}">
				<view class="font-color">
					<view>电业局</view>
					<view>已通过</view>
				</view>
			</block>
			<block wx:elif="{{item.auditStatus  ==3}}">
				<view class="font-color">
					<view>已分配</view>
					<view>安装人员</view>
				</view>
			</block>
			<block wx:elif="{{item.auditStatus  ==4}}">
				<view class="font-color">审核驳回</view>
			</block>
			<block wx:elif="{{item.auditStatus  ==5}}">
				<view class="font-color">已完成</view>
			</block>
		</view>
	</block>

</block>
<block wx:if="{{ishow==2}}">
	<view class="flex-between table-title">
		<view>好友昵称</view>
		<view>手机号</view>
		<view>安装状态</view>
		<view>邀请时间</view>
	</view>
	<block wx:if="{{!invitedList.length}}">
		<view class="nodata-c">
			<image src="/images/icon@2x.png"></image>
			<text>暂无记录</text>
		</view>
	</block>
	<block wx:if="{{invitedList.length}}" wx:for="{{invitedList}}" wx:key="{{index}}">
		<view class="flex-between table-title {{index%2 ? '' : 'odd'}}">
			<view class="item-view">{{item.name ? item.name : '-'}}</view>
			<view class="item-view">{{item.phone ? item.phone :'-'}}</view>
			<block wx:if="{{item.isFix  ==0}}">
				<view class="font-color item-view">未安装</view>
			</block>
			<block wx:elif="{{item.isFix  ==1}}">
				<view class="font-color item-view">已申请</view>
			</block>
			<block wx:elif="{{item.isFix  ==2}}">
				<view class="font-color item-view">
					<view>电业局</view>
					<view>已通过</view>
				</view>
			</block>
			<block wx:elif="{{item.isFix  ==3}}">
				<view class="font-color item-view">
					<view>已分配</view>
					<view>安装人员</view>
				</view>
			</block>
			<block wx:elif="{{item.isFix  ==4}}">
				<view class="font-color item-view">审核驳回</view>
			</block>
			<block wx:elif="{{item.isFix  ==5}}">
				<view class="font-color item-view">已完成</view>
			</block>
			<view class="item-view">{{item.createIime ? item.createIime : '-' }}</view>
		</view>
	</block>
	
</block>



<button open-type='share'>
	<view class="invite-btn">
		马上邀请
	</view>
</button>