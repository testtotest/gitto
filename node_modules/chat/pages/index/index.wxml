<view class="flex-between broadcast-c">
	<image class="broadcast-icon" src="/images/gonggao@2x.png"></image>
	<view>
		<view class="broadcast-item-c">
			<swiper indicator-dots="{{false}}" autoplay="{{true}}" circular="{{false}}" vertical="{{true}}"
				interval="{{3000}}" duration="{{200}}" previous-margin="{{0}}px" next-margin="{{0}}px">
				<block wx:for="{{broadcastData}}" wx:key="*this">
					<swiper-item>
						<view class="text-overflow broadcast-item">
							{{item}}
						</view>
					</swiper-item>
				</block>
			</swiper>
			<!-- <view class="text-overflow broadcast-item">
      [地区][昵称]已领取奖励1000元已领取奖励1000元已领取奖励1000元。
    </view> -->
		</view>
	</view>
	<!-- <image class="broadcast-more-btn" src="/images/gengduo_gonggao@2x.png"></image> -->
</view>

