<!--pages/feedback/feedback.wxml-->
<view class="feedback">
    <textarea  model:value="{{content}}" placeholder="请输入您要反馈的内容" placeholder-class="placeholder" />
</view>
<view class="btn btn-block" bindtap="onSubmitTap">
    提交反馈
</view>
<view class="model-public-c" wx:if="{{show}}">
				<view class="model-public">
								<view class="model-title">提示</view>
								<view class="model-desc">成功</view>
								<view bindtap="goUrl" class="model-btn">我知道了</view>
				</view>
</view>