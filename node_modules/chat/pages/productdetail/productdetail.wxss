/* pages/productdetail/productdetail.wxss */
.container {
    height: calc(100vh - 118rpx);
    overflow: hidden;
}

.no-address{
    display: flex;
    align-items: center;
    height: 130rpx;
    font-size: 30rpx;
    color: #333;
    background: #fff;
    padding: 0 30rpx;
}

.no-address image{
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.address-item {
    height: 154rpx;
    padding: 0 30rpx;
    background-color: #fff;
}

.address-item .name {
    font-size: 30rpx;
    font-weight: 500;
    color: #333333;
    line-height: 36rpx;
    margin-bottom: 5rpx;
}

.address-item .location {
    font-size: 24rpx;
    font-weight: 400;
    color: #333333;
    line-height: 36rpx;
    width: 574rpx;
}

.address-item .address-right image {
    width: 36rpx;
    height: 36rpx;
}

.product {
    margin-top: 20rpx;
    background: #fff;
    padding: 20rpx 30rpx;
}

.product-item {
    border-radius: 12rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
}

.product-item-img {
    width: 164rpx;
    height: 164rpx;
    margin-right: 30rpx;
}

.product-item-right {
    height: 164rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.product-item-price {
    font-size: 36rpx;
    font-weight: 500;
    color: #FF0000;
    margin-top: 20rpx;
}

.product-item-price text {
    font-size: 24rpx;
}

.product-item-title {
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
}

.product-item-area {
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
}

.product-item-tag-c {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
    flex-wrap: wrap;
    font-size: 26rpx;
    line-height: 26rpx;
    font-weight: 400;
    color: rgba(128, 207, 175, 1);
    margin-top: 28rpx;
}

.item-tag {
    margin-bottom: 23rpx;
    margin-right: 21rpx;
    padding: 8rpx 14rpx;
    border: 1px solid #38CF91;
    border-radius: 20px;
}

.product-desc {
    color: #999;
    font-size: 28rpx;
    margin-top: 20rpx;
}

.goProductDet {
    margin: 20rpx 0;
    height: 100rpx;
    color: #333;
    font-size: 30rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-weight: 500;
    background: #fff;
}

.goProductDet image {
    width: 24rpx;
    height: 24rpx;
}

.parts {
    padding: 40rpx 30rpx 1rpx;
    background: #fff;
}

.parts-item {
    margin-bottom: 30rpx;
}

.parts-title {
    margin-bottom: 15rpx;
    font-size: 30rpx;
    font-weight: 500;
    color: #333333;
}

.parts-option {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.parts-option-item {
    height: 66rpx;
    line-height: 66rpx;
    /* min-width: 110rpx; */
    padding: 0 30rpx;
    text-align: center;
    font-size: 26rpx;
    font-weight: 400;
    color: #333333;
    background: #F2F3F5;
    border-radius: 8rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid transparent
}

.parts-option-item.selected {
    background: #E0FFF2;
    border: 1rpx solid #38CF91;
    color: #38CF91;
}

.parts-option-item.stock {
    background: #F2F3F5;
    color: #CCCCCC;
}

.parts-option-item.big {
    padding: 0 30rpx;
}

.fixed-botton-btns {
    position: fixed;
    bottom: 0;
    z-index: 100;
    width: 100%;
    height: 98rpx;
    background: #fff;
    padding: 0 30rpx 0 43rpx;
    box-sizing: border-box;
}

.fixed-botton-btns .icon image {
    width: 44rpx;
    height: 44rpx;
}

.fixed-botton-btns .icon {
    position: relative;
}

.fixed-botton-btns .icon .red-point {
    width: 24rpx;
    height: 24rpx;
    line-height: 24rpx;
    text-align: center;
    border: 1rpx solid #FF0000;
    border-radius: 50%;
    position: absolute;
    right: -9rpx;
    top: -9rpx;
    font-size: 20rpx;
    color: #FF0000;
}

.fixed-botton-btns .icon .text {
    font-size: 18rpx;
    font-weight: 400;
    color: #333333;
}

.fixed-botton-btns .join-cart {
    width: 282rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #FFFFFF;
    border: 2rpx solid #38CF91;
    border-radius: 40rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 400;
    color: #38CF91;
}

.fixed-botton-btns .wx-pay {
    width: 282rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #38CF91;
    border-radius: 40rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 400;
    color: #fff;
}

.address-c {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 880rpx;
    padding-bottom: 20rpx;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    background: #FFFFFF;
    animation-duration: 0.5s
}

.address-c .address-title{
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 500;
    color: #343434;
}

.closed-btn {
    width: 26rpx;
    height: 26rpx;
}