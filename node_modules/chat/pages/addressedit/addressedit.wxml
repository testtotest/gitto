<!--pages/addressedit/addressedit.wxml-->
<view class="addressedit">
    <view class="form-c">
        <view class="flex-between form-item">
            <view class="item-form-title">姓名</view>
            <view>
                <input model:value="{{name}}" placeholder="请填写" placeholder-class="placeholder" />
            </view>
        </view>
        <view class="flex-between form-item">
            <view class="item-form-title">手机号码</view>
            <view>
                <input model:value="{{phone}}" placeholder="请填写" placeholder-class="placeholder" />
            </view>
        </view>
        <view class="flex-between form-item">
            <view class="item-form-title">所在地区</view>
            <view class="item-form-input" bindtap="onRegionTap">
                <input model:value="{{area}}" placeholder="请选择" placeholder-class="placeholder"
                    disabled="true" />
                <view>
                    <image src="/images/gengduo_gonggao@2x.png"></image>
                </view>
            </view>
        </view>
        <view class="flex-between form-item">
            <view class="item-form-title">详细地址</view>
            <view>
                <input model:value="{{detailed}}" placeholder="请填写" placeholder-class="placeholder" />
            </view>
        </view>
    </view>
    <view class="default">
        <label class="radio" bindtap="onRadioTap">
            <radio checked="{{radioChecked}}" color="#38D092" />默认地址
        </label>
    </view>
</view>
<view class="btn btn-block save" bindtap="onSaveTap">
    保存
</view>
<view class="btn btn-block delete" bindtap="onDeleteTap" wx:if="{{type === 'edit'}}">
    删除地址
</view>


<view class="model-public-c" wx:if="{{showAddressModel}}">
    <view class='address-c animated {{showAddressModel ?"fadeInUp":""}}'>
        <image bindtap="closedModel" class="closed-btn" src="../../images/close.png" />
        <view class="address-title">请选择</view>
        <view class="address-tab">
            <block wx:for="{{areaArray}}">
                <text>{{item}}</text>
            </block>
        </view>
        <scroll-view class="address-list" scroll-y="true" style="height:700rpx;">   
            <block wx:for="{{addressView}}" wx:key="index">
                <view class="address-item" data-id="{{item.id}}" data-parentId="{{item.parentId}}" data-name="{{item.name}}" bindtap="onRegionTap"> 
                    {{item.name}}
                </view>
            </block>
        </scroll-view>
    </view>
</view>

<view class="model-public-c" wx:if="{{show}}">
				<view class="model-public">
								<view class="model-title">提示</view>
								<view class="model-desc">成功</view>
								<view bindtap="goUrl" class="model-btn">我知道了</view>
				</view>
</view>