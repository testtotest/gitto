/* pages/address/address.wxss */
.address-list {
    margin-top: 20rpx;
}

.address-list .address-item {
    height: 130rpx;
    padding: 0 30rpx;
    border-bottom: 1px solid #ededed;
    background-color: #fff;
}

.address-list .address-item:last-child {
    border: none;
}

.address-item .name {
    font-size: 30rpx;
    font-weight: 500;
    color: #333333;
    line-height: 36rpx;
    margin-bottom: 10rpx;
}

.address-item .location {
    font-size: 26rpx;
    font-weight: 400;
    color: #333333;
    line-height: 36rpx;
    width: 574rpx;
}

.address-item .location .default {
    display: inline-block;
    width: 50rpx;
    height: 30rpx;
    border: 1rpx solid #38CF91;
    border-radius: 4rpx;
    font-size: 20rpx;
    color: #38CF91;
    line-height: 28rpx;
    text-align: center;
}

.address-item .address-right {
    font-size: 28rpx;
    color: #38CF91;
    line-height: 36rpx;
}

.btn {
    font-size: 30rpx;
    background-color: #38CF91;
    position: fixed;
    bottom: 80rpx;
    left: 30rpx;
}

.nodata {
    padding-top: 260rpx;
    text-align: center;
}

.nodata image {
    width: 128rpx;
    height: 128rpx;
}

.nodata-text {
    margin: 40rpx 0 60rpx;
    font-size: 30rpx;
    color: #9A9A9A;
}

.addAddress {
    width: 278rpx;
    height: 80rpx;
    background: #FFFFFF;
    border: 1px solid #9A9A9A;
    border-radius: 40rpx;
    font-size: 28rpx;
    color: #343434;
    text-align: center;
    line-height: 80rpx;
    margin: auto;
}