<!--pages/address/address.wxml-->
<view class="nodata" wx:if="{{nodata}}">
    <image src="/images/nodizhi@2x.png"></image>
    <view class="nodata-text">您还没有安装地址</view>
    <view class="addAddress" bindtap="addAddress">
        新建地址
    </view>
</view>


<view class="address-list" wx:if="{{!nodata}}">
    <block wx:for="{{addresslist}}" wx:key="index">
        <view class="address-item flex-between">
            <view class="address-left">
                <view class="name">
                    {{item.name}} 
                    <text>{{item.phone}}</text>
                </view>
                <view class="location">
                    <text class="default" wx:if="{{item.status == '1'}}">默认</text>
                    {{item.provinceVo.name + item.cityVo.name + item.countyVo.name + item.detailed}}
                </view>
            </view>
            <view class="address-right" bindtap="onEditTap" data-params="{{item}}">
                编辑
            </view>
        </view>
    </block>

</view>
<view class="btn btn-block" bindtap="addAddress" wx:if="{{!nodata}}">
    新增收货地址
</view>