<!--pages/applyagent/applyagent.wxml-->
<view>
    <view class="banner">
        <image src="https://img.tongyunzn.com/tyxcxtp/xcx_qdhz.png"></image>
    </view>
    <view class="form-c">
        <view class="flex-between form-item">
            <view class="item-form-title">昵称</view>
            <view>
                <input model:value="{{username}}" placeholder="请填写" placeholder-class="placeholder" />
            </view>
        </view>
        <view class="flex-between form-item">
            <view class="item-form-title">手机号</view>
            <view>
                <input model:value="{{phone}}" placeholder="请填写" placeholder-class="placeholder" />
            </view>
        </view>
        <view class="flex-between form-item">
            <view class="item-form-title">验证码</view>
            <view>
                <input model:value="{{code}}" placeholder="请填写"  placeholder-class="placeholder" />
            </view>
            <view class="getcode" catchtap="getCode" wx:if="{{!isSend}}">获取验证码</view>
            <text class="countdown" wx:else>{{timeView}}s</text>
        </view>
        <view class="flex-between form-item">
            <view class="item-form-title">代理区域</view>
            <view>
                <input model:value="{{proxyArea}}" placeholder="省或市或县" placeholder-class="placeholder" />
            </view>
        </view>
    </view>
</view>
<view class="btn btn-block" bindtap="onSubmitTap"> 
    提交
</view>

<view class="model-public-c" wx:if="{{show}}">
				<view class="model-public">
								<view class="model-title">提示</view>
								<view class="model-desc">成功</view>
								<view bindtap="goUrl" class="model-btn">我知道了</view>
				</view>
</view>