  <script src="../../../layuiadmin/lib/jquery.js"></script>
  <script src="../../../layuiadmin/lib/layui.js"></script>
  <script>
    layui.config({
      base: '../../../layuiadmin/' //静态资源所在路径
    }).extend({
      index: 'lib/index' //主入口模块
    }).use(['index', 'inviteDetailList', 'table', 'api', 'laydate'], function () {
      var table = layui.table
        , form = layui.form,
        $ = layui.$,
        baseurl = layui.api.baseUrl;

      laydate = layui.laydate;

      form.on('submit(layuiadmin-app-form-submit)', function (data) {
        var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引 
        parent.layui.table.reload('LAY-app-content-list'); //重载表格
        parent.layer.close(index); //再执行关闭
      })



      laydate.render({
        elem: '#beginDate'
        //,type: 'date' //type 默认为 date，所以可不填
      });
      laydate.render({
        elem: '#endDate'
        //,type: 'date' //type 默认为 date，所以可不填
      });
      $('#token').val(sessionStorage.getItem("token"))
      $('#userId').val(sessionStorage.getItem("profit_userId"))
      var exporturl = baseurl + '/qrcode/admin/invite/queryInviteDetailList?isExport=1'
      $('#form_submit').attr('action', exporturl);
      layui.use('form', function () {
        var form = layui.form;
        form.render();
      });
      //监听
      table.on("tool(LAY-app-content-list)", function (t) {
        var e = t.data;
        //监听 累计分润
        if ("profit" === t.event) {
          sessionStorage.setItem("profit_userId", t.data.fromUserId);
          layer.open({
            type: 2
            , title: '查看累计分润'
            , content: 'profitList.html'
            , maxmin: true
            , area: ['100%', '100%']
            , btn: ['确定']
            , yes: function (index, layero) {
              //点击确认触发 iframe 内容中的按钮提交
              var submit = layero.find('iframe').contents().find("#layuiadmin-app-form-submit");
              submit.click();
            }
          });
        }
        //监听 邀请明细
        if ("inv" === t.event) {
          sessionStorage.setItem("profit_userId", t.data.fromUserId);
          layer.open({
            type: 2
            , title: '查看邀请明细'
            , content: 'profitList.html'
            , maxmin: true
            , area: ['100%', '100%']
            , btn: ['确定']
            , yes: function (index, layero) {
              //点击确认触发 iframe 内容中的按钮提交
              var submit = layero.find('iframe').contents().find("#layuiadmin-app-form-submit");
              submit.click();
            }
          });
        }

      })




      //监听搜索
      form.on('submit(LAY-app-contlist-search)', function (data) {
        var field = data.field;
        // $('#beginDate2').val(field.beginDate)
        // $('#endDate2').val(field.endDate)
        $('#name2').val(field.name)
        $('#userId2').val(field.userId)
        $('#userName2').val(field.userName)
        //执行重载
        table.reload('LAY-app-content-list', {
          where: field
        });
      });

      var $ = layui.$, active = {
        // batchdel: function(){
        //   // alert('2')
        //   var checkStatus = table.checkStatus('LAY-app-content-list')
        //   ,checkData = checkStatus.data; //得到选中的数据

        //   if(checkData.length === 0){
        //     return layer.msg('请选择数据');
        //   }

        //   layer.confirm('确定删除吗？', function(index) {

        //     //执行 Ajax 后重载
        //     /*
        //     admin.req({
        //       url: 'xxx'
        //       //,……
        //     });
        //     */
        //     table.reload('LAY-app-content-list');
        //     layer.msg('已删除');
        //   });
        // },
        // add: function () {
        //   layer.open({
        //     type: 2
        //     , title: '新增'
        //     , content: 'bannerForm.html'
        //     , maxmin: true
        //     , area: ['100%', '100%']
        //     , btn: ['确定', '取消']
        //     , yes: function (index, layero) {
        //       //点击确认触发 iframe 内容中的按钮提交
        //       var submit = layero.find('iframe').contents().find("#layuiadmin-app-form-submit");
        //       submit.click();
        //     }
        //     , success: function (layero, index) {
        //       //  var body = layer.getChildFrame('body', index);
        //       // body.contents().find('#issuerNo').html(issuerNoTemp)
        //     }
        //   });
        // },
      };

      $('.layui-btn.layuiadmin-btn-list').on('click', function () {
        var type = $(this).data('type');
        active[type] ? active[type].call(this) : '';
      });

    });
  </script>
